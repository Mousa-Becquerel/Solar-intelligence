# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-change-this-in-production
# Set to 'development' for local dev, 'production' for deployment
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///chat_history.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Weaviate Configuration
WEAVIATE_URL=your-weaviate-url
WEAVIATE_API_KEY=your-weaviate-api-key

# Google Analytics (Optional)
# Get your ID from https://analytics.google.com/
# Format: G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=

# Logfire Configuration (REQUIRED for monitoring)
# Get your token from https://logfire.pydantic.dev/
LOGFIRE_TOKEN=your-logfire-token-here

# Async Agent Configuration (Feature Flag)
# Set to 'true' to enable async non-blocking agent (supports 100+ concurrent users)
# Set to 'false' to use legacy sync agent (supports 4 concurrent users)
USE_ASYNC_AGENT=true

# Email Configuration (if using email features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password

# AWS Configuration (for production deployment)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1

# Redis Configuration (for distributed session storage)
# Leave empty for local SQLite storage
# For AWS ElastiCache: redis://your-elasticache-endpoint:6379/0
# For local Redis: redis://localhost:6379/0
# REDIS_URL=
